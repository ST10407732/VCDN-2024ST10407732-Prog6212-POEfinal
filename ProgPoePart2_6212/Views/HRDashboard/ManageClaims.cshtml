@model IEnumerable<ProgPoePart2_6212.Models.LecturerClaim>

@{
    ViewData["Title"] = "Manage Claims";
}

<h2>Manage Claims</h2>

<form method="post" asp-action="BulkProcessClaims">
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Lecturer</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td><input type="checkbox" name="selectedClaims" value="@claim.Id" /></td>
                    <td>@claim.User.FullName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td>@claim.Status</td>
                    <td>
                        <form asp-action="DeleteClaim" method="post" style="display:inline">
                            <input type="hidden" name="claimId" value="@claim.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   @*  <button type="submit" name="action" value="approve" class="btn btn-success">Approve Selected</button>
    <button type="submit" name="action" value="reject" class="btn btn-danger">Reject Selected</button> *@
</form>
