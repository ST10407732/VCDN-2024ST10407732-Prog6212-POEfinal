@model IEnumerable<ProgPoePart2_6212.Models.LecturerClaim>

@{
    ViewData["Title"] = "Manage Claims";
}

<h2 class="page-title">Manage Claims</h2>

<form method="post" asp-action="BulkProcessClaims">
    <table class="table table-bordered table-striped claim-table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Lecturer</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td><input type="checkbox" name="selectedClaims" value="@claim.Id" class="claim-checkbox" /></td>
                    <td>@claim.User.FullName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td>@claim.Status</td>
                    <td>
                        <form asp-action="DeleteClaim" method="post" style="display:inline">
                            <input type="hidden" name="claimId" value="@claim.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

<!-- Add CSS to apply beige and brown theme -->
<style>
    body {
        background-color: #f5f5dc; /* Beige background */
        font-family: Arial, sans-serif;
        color: #4b3c2f; /* Brown text color */
    }

    .page-title {
        color: #4b3c2f;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        background-color: #ffffff; /* White table background */
        border-radius: 8px;
        border: 1px solid #b28d65; /* Light brown border */
    }

        .table th, .table td {
            padding: 10px;
            text-align: left;
        }

        .table th {
            background-color: #c4a37d; /* Beige table header */
            color: #ffffff;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f2e2c4; /* Light beige for odd rows */
        }

        .table tbody tr:nth-child(even) {
            background-color: #ebd9b1; /* Lighter beige for even rows */
        }

    .claim-checkbox {
        margin: 0;
    }

    /* Keep the delete button red as it was */
    .btn-danger {
        background-color: #dc3545; /* Red button */
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red on hover */
            border-color: #c82333;
        }
</style>
