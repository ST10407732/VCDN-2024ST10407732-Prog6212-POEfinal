    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #218838;
    }

    .summary-section {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #b28d65;
        margin-bottom: 30px;
    }

    .summary-section h3 {
        color: #4b3c2f;
        margin-bottom: 15px;
    }

    .summary-section ul {
        list-style-type: none;
        padding: 0;
    }

    .summary-section li {
        padding: 5px 0;
