        text-align: center;
        margin-bottom: 30px;
    }

    .report-title {
        color: #4b3c2f;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .download-buttons a {
        margin: 0 10px;
        padding: 10px 20px;
