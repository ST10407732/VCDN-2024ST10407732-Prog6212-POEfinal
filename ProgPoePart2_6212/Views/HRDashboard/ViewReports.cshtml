@model List<string>

<h2 class="report-title">Approved Claim Reports</h2>

<table class="table table-bordered table-striped reports-table">
    <thead>
        <tr>
            <th>Report Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report</td>
                <td>
                    <a href="@Url.Action("DownloadReport", "HRDashboard", new { fileName = report })" class="btn btn-primary">
                        Download
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Add CSS to apply beige and brown theme -->
<style>
    body {
        background-color: #f5f5dc; /* Beige background */
        font-family: Arial, sans-serif;
        color: #4b3c2f; /* Brown text color */
    }

    .report-title {
        color: #4b3c2f;
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
    }

    .table {
        width: 100%;
        background-color: #ffffff;
        border-radius: 8px;
        border: 1px solid #b28d65;
    }

        .table th, .table td {
            padding: 10px;
            text-align: left;
        }

        .table th {
            background-color: #c4a37d; /* Beige table header */
            color: #ffffff;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f2e2c4; /* Light beige for odd rows */
        }

        .table tbody tr:nth-child(even) {
            background-color: #ebd9b1; /* Lighter beige for even rows */
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
