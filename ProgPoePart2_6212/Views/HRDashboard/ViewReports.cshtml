@model List<string>
<h2>Approved Claim Reports</h2>

<table class="table">
    <thead>
        <tr>
            <th>Report Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report</td>
                <td>
                    <a href="@Url.Action("DownloadReport", "HRDashboard", new { fileName = report })" class="btn btn-primary">
                        Download
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
