@using ProgPoePart2_6212.Models
@{
    ViewData["Title"] = "HR Dashboard";
}

<style>
    /* Dashboard container styling */
    .dashboard-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
        margin: 20px;
    }

    /* Dashboard item styling */
    .dashboard-item {
        width: 45%;
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        background-color: #f5f5f5; /* Beige background */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #d1c2b7; /* Subtle beige border */
    }

    .dashboard-item:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
    }

    /* Button styling */
    .btn-block {
        width: 100%;
        font-size: 16px;
        padding: 12px;
        margin-top: 15px;
        background-color: #a97456; /* Brown button */
        border: none;
        color: white;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-block:hover {
        background-color: #8c5c3b; /* Darker brown on hover */
    }

    /* Text colors */
    .text-primary {
        color: #5f4b3d; /* Dark brown color */
        font-weight: bold;
    }

    .text-muted {
        color: #a68f77; /* Light brownish-muted text */
    }

   
</style>

<h2 class="text-center mb-4" style="color: #5f4b3d;">HR Dashboard</h2>

<div class="dashboard-container">
    <div class="dashboard-item">
        <h3 class="text-primary">Manage Lecturers</h3>
        <p class="text-muted">Manage all lecturer information</p>
        <a href="@Url.Action("ManageLecturers", "HRDashboard")" class="btn btn-block">Manage Lecturers</a>
    </div>
    <div class="dashboard-item">
        <h3 class="text-primary">Manage Claims</h3>
        <p class="text-muted">Review and approve claims</p>
        <a href="@Url.Action("ManageClaims", "HRDashboard")" class="btn btn-block">Manage Claims</a>
    </div>
</div>

<div class="dashboard-container">
    <div class="dashboard-item">
        <h3 class="text-primary">Generate Reports</h3>
        <p class="text-muted">Generate invoices and claims reports</p>
        <a href="@Url.Action("GenerateReports", "HRDashboard")" class="btn btn-block">Generate Reports</a>
    </div>
    <div class="dashboard-item">
        <h3 class="text-primary">View Reports</h3>
        <p class="text-muted">View uploaded or generated reports</p>
        <a href="@Url.Action("ViewReports", "HRDashboard")" class="btn btn-block">View Reports</a>
    </div>
</div>
