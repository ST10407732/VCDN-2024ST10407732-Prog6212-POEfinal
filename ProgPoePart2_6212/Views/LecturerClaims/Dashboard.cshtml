@model IEnumerable<ProgPoePart2_6212.Models.LecturerClaim>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Dashboard</title>
    <style>
        body {
            background-color: #f5f5f5; /* Light grey background */
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            background-color: #d3b89f; /* Light brownish background */
            border-radius: 8px;
            padding: 2rem;
            max-width: 900px;
            margin: 2rem auto;
        }

        h2 {
            color: #333;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            background-color: #8c5e3c; /* Brownish button */
            border: none;
            color: white;
            padding: .5rem 1rem;
            font-size: 1rem;
            border-radius: .25rem;
            cursor: pointer;
            margin-bottom: 1rem;
        }

            .btn-primary:hover {
                background-color: #704c2f; /* Darker brown on hover */
            }

        .btn-info {
            background-color: #17a2b8;
            border: none;
            color: white;
            padding: .375rem .75rem;
            font-size: 0.875rem;
            border-radius: .25rem;
        }

            .btn-info:hover {
                background-color: #138496;
            }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            color: white;
            padding: .375rem .75rem;
            font-size: 0.875rem;
            border-radius: .25rem;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-warning {
            background-color: #ffc107;
            border: none;
            color: white;
            padding: .375rem .75rem;
            font-size: 0.875rem;
            border-radius: .25rem;
        }

            .btn-warning:hover {
                background-color: #e0a800;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: .75rem;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #8c5e3c; /* Brownish header background */
            color: white;
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .text-center {
            text-align: center;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Lecturer Dashboard</h2>

        <div class="mb-3">
            <a asp-action="SubmitClaim" class="btn btn-primary">Submit New Claim</a>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.Id</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate</td>
                            <td>@(claim.HoursWorked * claim.HourlyRate)</td> <!-- Calculating total amount -->
                            <td>@claim.Status</td>
                            <td>
                                <a asp-action="TrackClaim" asp-route-id="@claim.Id" class="btn btn-info">Track Claim</a>


                                @if (claim.Status == ProgPoePart2_6212.Models.ClaimStatus.Rejected)
                                {
                                    <a asp-controller="LecturerClaims" asp-action="ResubmitClaim" asp-route-id="@claim.Id" class="btn btn-warning btn-sm" style="margin-left: 8px;">
                                        Resubmit
                                    </a>
                                }

                                <!-- Delete button -->
                                <form asp-action="DeleteClaim" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this claim?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@claim.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No claims submitted yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
