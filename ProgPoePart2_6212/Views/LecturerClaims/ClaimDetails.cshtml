 @model ProgPoePart2_6212.Models.LecturerClaim

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Claim Details</title>
    <style>
        body {
            background-color: #f5f5f5; /* Light grey background */
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            background-color: #d3b89f; /* Light brownish background */
            border-radius: 8px;
            padding: 2rem;
            max-width: 900px;
            margin: 2rem auto;
        }

        h2, h4 {
            color: #333;
            margin-bottom: 1.5rem;
        }

        p {
            margin: .5rem 0;
            font-size: 1rem;
        }

        .document-list {
            display: flex;
            flex-direction: column;
        }

        .document-item {
            margin-bottom: 5px;
        }

        .document-link {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

            .document-link:hover {
                text-decoration: underline;
            }

        .document-date {
            font-size: 0.9em;
            color: #6c757d;
        }

        .btn-secondary {
            background-color: #8c5e3c; /* Brownish button */
            color: white;
            border: none;
            padding: .5rem 1rem;
            font-size: 1rem;
            border-radius: .25rem;
            cursor: pointer;
            text-decoration: none;
        }

            .btn-secondary:hover {
                background-color: #704c2f; /* Darker brown on hover */
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Claim Details</h2>

        <div>
            <h4>Claim Information</h4>
            <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
            <p><strong>Hourly Rate:</strong> @Model.HourlyRate</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Notes:</strong> @Model.Notes</p>
        </div>

        <div>
            <h4>Documents</h4>
            @if (Model.Documents != null && Model.Documents.Any())
            {
                <div class="document-list">
                    @foreach (var document in Model.Documents)
                    {
                        <div class="document-item">
                            <a href="@Url.Content($"~/Uploads/{Model.Id}/{document.FileName}")" class="document-link">
                                @document.FileName
                            </a>
                            <span class="document-date"> - Uploaded on @document.UploadDate.ToShortDateString()</span>
                        </div>
                    }
                </div>
            }
            else
            {
                <span>No documents uploaded.</span>
            }
        </div>

        <a asp-action="TrackClaims" class="btn btn-secondary">Back to Track Claims</a>
    </div>
</body>
</html>
