@model ProgPoePart2_6212.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-color: saddlebrown; /* Light grey background for a softer feel */
        color: #495057; /* Darker grey text */
        font-family: 'Arial', sans-serif; /* Modern font */
    }

    .container {
        background-color: #ffffff; /* White background for form */
        padding: 40px;
        border-radius: 15px; /* Rounded corners */
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        margin-top: 50px; /* Space from the top */
        max-width: 500px; /* Centered form with a max width */
        margin-left: auto;
        margin-right: auto; /* Center the form */
    }

    h2 {
        color: #8A4B2B; /* Soft brown color for heading */
        margin-bottom: 30px; /* Spacing below the heading */
        text-align: center; /* Center heading text */
    }

    .btn-primary {
        background-color: #8A4B2B; /* Primary button color */
        border-color: #8A4B2B; /* Button border color */
        font-weight: bold; /* Bold button text */
        transition: background-color 0.3s ease; /* Smooth transition for hover effect */
    }

        .btn-primary:hover {
            background-color: #6f3c23; /* Darker brown on hover */
            border-color: #6f3c23; /* Darker border on hover */
        }

    .form-label {
        color: #8A4B2B; /* Label color */
        font-weight: 600; /* Bold labels */
    }

    .form-control {
        border: 1px solid #ced4da; /* Light grey border for inputs */
        border-radius: 5px; /* Slightly rounded inputs */
        padding: 12px; /* Comfortable padding */
        margin-bottom: 20px; /* Spacing between inputs */
        transition: border-color 0.3s ease; /* Smooth transition for focus */
    }

        .form-control:focus {
            border-color: #8A4B2B; /* Brown border on focus */
            box-shadow: 0 0 5px rgba(138, 75, 43, 0.5); /* Focus shadow */
        }

    .text-danger {
        color: #dc3545; /* Red color for validation messages */
    }

    .text-center {
        text-align: center; /* Center text for login link */
    }

    .container a {
        color: #8A4B2B; /* Brownish color for links */
        font-weight: bold; /* Bold link text */
        transition: color 0.3s ease; /* Smooth transition for hover effect */
    }

        .container a:hover {
            color: #6f3c23; /* Darker brown on hover */
        }
</style>

<div class="container">
    <h2>Register</h2>

    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
    </form>

    <div class="mt-3 text-center">
        <p>Already have an account? <a asp-action="Login">Login here</a></p>
    </div>
</div>
