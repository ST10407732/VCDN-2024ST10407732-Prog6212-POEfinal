@model IEnumerable<ProgPoePart2_6212.Models.LecturerClaim>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f5f5f5; /* Light grey background for the page */
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            padding: 2rem;
            max-width: 1200px;
            margin: 2rem auto; /* Centering the container */
        }

        h2 {
            margin-bottom: 1.5rem;
            color: #333;
        }

        .claims-section {
            background-color: #fef3e2; /* Light brown background for claims sections */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            padding: 1.5rem;
            margin-bottom: 2rem; /* Space between sections */
        }

        .section-title {
            color: #8B4513; /* Brown color for section titles */
            margin-bottom: 1rem;
            text-align: center; /* Centering the section title */
        }

        table {
            width: 100%;
            margin-bottom: 1.5rem;
            border-collapse: collapse; /* Ensures borders between table cells */
        }

        th, td {
            padding: 0.75rem;
            text-align: left;
            border-bottom: 1px solid #ddd; /* Light border for rows */
            color: #333; /* Text color for table cells */
        }

        th {
            background-color: saddlebrown; /* Dark brown background for headers */
            color: #f8f9fa; /* Light color for header text */
        }

        .document-list {
            display: flex;
            flex-direction: column;
        }

        .document-item {
            margin-bottom: 5px;
        }

        .document-link {
            color: #007bff; /* Blue color for document links */
            text-decoration: none;
            font-weight: bold;
        }

            .document-link:hover {
                text-decoration: underline;
            }

        .document-date {
            font-size: 0.9em;
            color: #6c757d; /* Grey for document date */
        }

        .btn {
            padding: .375rem .75rem;
            border-radius: .25rem;
            text-decoration: none;
            color: #fff;
            transition: background-color 0.3s;
            font-weight: bold;
        }

        .btn-success {
            background-color: #28a745; /* Green */
        }

        .btn-danger {
            background-color: #dc3545; /* Red */
        }

        .btn-success:hover {
            background-color: #218838; /* Darker green on hover */
        }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red on hover */
        }

        .text-muted {
            color: #6c757d; /* Muted color for text */
        }

        /* Additional styles for status colors */
        .pending {
            background-color: #ffeb3b; /* Yellow for Pending Approval */
        }

        .approved {
            background-color: #28a745; /* Green for Approved */
            color: white;
        }

        .rejected {
            background-color: #dc3545; /* Red for Rejected */
            color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Claims Overview</h2>

        <div class="claims-section">
            <h3 class="section-title">Pending Claims for Verification</h3>
            <table>
                <thead>
                    <tr>
                        <th>Lecturer</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Status</th>
                        <th>Documents</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Where(c => c.Status == ClaimStatus.PendingVerification))
                    {
                        <tr class="pending">
                            <td>@claim.User?.FullName</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>@claim.Status</td>
                            <td>
                                @if (claim.Documents != null && claim.Documents.Any())
                                {
                                    <div class="document-list">
                                        @foreach (var document in claim.Documents)
                                        {
                                            <div class="document-item">
                                                <a href="@Url.Content($"~/Uploads/{claim.Id}/{document.FileName}")" class="document-link">
                                                    @document.FileName
                                                </a>
                                                <span class="document-date"> - Uploaded on @document.UploadDate.ToShortDateString()</span>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No documents uploaded.</span>
                                }
                            </td>
                            <td>
                                <a asp-action="VerifyClaim" asp-route-id="@claim.Id" class="btn btn-success btn-sm">Verify</a>
                                <a asp-action="RejectClaim" asp-route-id="@claim.Id" class="btn btn-danger btn-sm">Reject</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="claims-section">
            <h3 class="section-title">Pending Approval Claims</h3>
            <table>
                <thead>
                    <tr>
                        <th>Lecturer</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Status</th>
                        <th>Documents</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Where(c => c.Status == ClaimStatus.PendingApproval))
                    {
                        <tr class="pending">
                            <td>@claim.User?.FullName</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>@claim.Status</td>
                            <td>
                                @if (claim.Documents != null && claim.Documents.Any())
                                {
                                    <div class="document-list">
                                        @foreach (var document in claim.Documents)
                                        {
                                            <div class="document-item">
                                                <a href="@Url.Content($"~/Uploads/{claim.Id}/{document.FileName}")" class="document-link">
                                                    @document.FileName
                                                </a>
                                                <span class="document-date"> - Uploaded on @document.UploadDate.ToShortDateString()</span>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No documents uploaded.</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="claims-section">
            <h3 class="section-title">Approved Claims</h3>
            <table>
                <thead>
                    <tr>
                        <th>Lecturer</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Status</th>
                        <th>Documents</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Where(c => c.Status == ClaimStatus.Approved))
                    {
                        <tr class="approved">
                            <td>@claim.User?.FullName</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>@claim.Status</td>
                            <td>
                                @if (claim.Documents != null && claim.Documents.Any())
                                {
                                    <div class="document-list">
                                        @foreach (var document in claim.Documents)
                                        {
                                            <div class="document-item">
                                                <a href="@Url.Content($"~/Uploads/{claim.Id}/{document.FileName}")" class="document-link">
                                                    @document.FileName
                                                </a>
                                                <span class="document-date"> - Uploaded on @document.UploadDate.ToShortDateString()</span>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No documents uploaded.</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="claims-section">
            <h3 class="section-title">Rejected Claims</h3>
            <table>
                <thead>
                    <tr>
                        <th>Lecturer</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Status</th>
                        <th>Documents</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.Where(c => c.Status == ClaimStatus.Rejected))
                    {
                        <tr class="rejected">
                            <td>@claim.User?.FullName</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>@claim.Status</td>
                            <td>
                                @if (claim.Documents != null && claim.Documents.Any())
                                {
                                    <div class="document-list">
                                        @foreach (var document in claim.Documents)
                                        {
                                            <div class="document-item">
                                                <a href="@Url.Content($"~/Uploads/{claim.Id}/{document.FileName}")" class="document-link">
                                                    @document.FileName
                                                </a>
                                                <span class="document-date"> - Uploaded on @document.UploadDate.ToShortDateString()</span>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No documents uploaded.</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
