<style>
    .document-list {
        display: flex;
        flex-direction: column;
    }

    .document-item {
        margin-bottom: 5px;
    }

    .document-link {
        color: #6a4f4b;
        text-decoration: none;
        font-weight: bold;
    }

        .document-link:hover {
            text-decoration: underline;
        }

    .document-date {
        font-size: 0.9em;
        color: #6c757d;
    }

    .btn {
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 5px;
        margin: 5px;
    }
</style>
